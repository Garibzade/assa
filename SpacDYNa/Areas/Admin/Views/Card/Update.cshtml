@using SpacDYNa.Models
@model UpdateCardsVM
<div class="card-body">
    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"> Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SubTitle" class="form-label"> SubTitle</label>
            <input asp-for="SubTitle" class="form-control">
            <span asp-validation-for="SubTitle"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label"> ImageUrl</label>
            <input asp-for="ImageUrl" class="form-control">
            <span asp-validation-for="ImageUrl"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>